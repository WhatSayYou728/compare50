#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int height, row, column, spaces;
   
    //promt the user for height
    do
    {
        height = get_int("Pyramid's height: ");
    }
    while (height < 1 || height > 8);
    //printf("Stored: %i\n", height);

    //building pyramid
    for (row = 0; row < height; row++)
    {
        for (spaces = 0; spaces < height - row - 1; spaces++)   //building right aligned pyramid
        {
            printf(" ");
        }
        for (column = 0; column <= row; column++)
        {
            printf("#");
        }
        printf("\n");
    }
       
}
